{
  "name": "Web Scrobbler",

  "description": "__MSG_extDescription__",
  "icons": {
    "16": "icons/icon-generic-16.png",
    "48": "icons/icon-chrome-48.png",
    "128": "icons/icon-chrome-128.png"
  },

  "manifest_version": 2,

  "default_locale": "en",

  "web_accessible_resources": [
    "connectors/deezer-dom-inject.js",
    "connectors/musickit-dom-inject.js",
    "connectors/vk-dom-inject.js",
    "connectors/yandex-music-dom-inject.js"
  ],

  "background": {
    "page": "background/index.html"
  },

  "commands": {
    "toggle-connector": {
      "description": "__MSG_hotkeyToggleConnector__"
    },
    "love-song": {
      "description": "__MSG_hotkeyLoveTrack__"
    },
    "unlove-song": {
      "description": "__MSG_hotkeyUnloveTrack__"
    }
  },

  "homepage_url": "https://web-scrobbler.com",

  "options_page": "ui/options/index.html",
  "options_ui": {
    "page": "ui/options/index.html",
    "open_in_tab": true
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "storage",

    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": {
      "19": "/icons/page-action-unsupported-19.png",
      "38": "/icons/page-action-unsupported-38.png"
    },
    "default_title": "__MSG_pageActionUnsupported__",
    "default_popup": "/ui/popups/unsupported.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["connectors/dummy.js"]
  }]
}
